<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AboutUsFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/imgJoey"
        android:layout_width="200dp"
        android:layout_height="240dp"
        android:src="@drawable/joey"
        android:layout_centerInParent="true" />
    <TextView
        android:id="@+id/txtArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgJoey"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:text="@string/artistPage"
        android:layout_marginStart="50dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_version_1_0"
        android:layout_below="@+id/txtArtist"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>